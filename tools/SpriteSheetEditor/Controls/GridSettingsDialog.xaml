<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpriteSheetEditor.Controls.GridSettingsDialog"
             BackgroundColor="#80000000">

    <Frame BackgroundColor="#2d2d30" BorderColor="#3e3e42" CornerRadius="8"
           HorizontalOptions="Center" VerticalOptions="Center"
           Padding="20" MinimumWidthRequest="300">
        <VerticalStackLayout Spacing="16">
            <Label Text="Generate Grid" FontSize="18" FontAttributes="Bold" TextColor="White" />

            <Grid ColumnDefinitions="*,*" ColumnSpacing="16">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="Columns:" TextColor="#ccc" />
                    <Entry x:Name="ColumnsEntry" Text="4" Keyboard="Numeric"
                           BackgroundColor="#333" TextColor="White" />
                </VerticalStackLayout>
                <VerticalStackLayout Grid.Column="1">
                    <Label Text="Rows:" TextColor="#ccc" />
                    <Entry x:Name="RowsEntry" Text="4" Keyboard="Numeric"
                           BackgroundColor="#333" TextColor="White" />
                </VerticalStackLayout>
            </Grid>

            <Label x:Name="InfoLabel" TextColor="#aaa" FontSize="12" />
            <Label x:Name="WarningLabel" TextColor="#f0ad4e" FontSize="12" />

            <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked"
                        BackgroundColor="#3e3e42" TextColor="White" />
                <Button x:Name="GenerateButton" Text="Generate" Clicked="OnGenerateClicked"
                        BackgroundColor="#0078d4" TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
