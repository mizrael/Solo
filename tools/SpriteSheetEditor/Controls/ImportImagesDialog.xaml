<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpriteSheetEditor.Controls.ImportImagesDialog"
             BackgroundColor="#80000000">

    <Frame BackgroundColor="#2d2d30" BorderColor="#3e3e42" CornerRadius="8"
           HorizontalOptions="Center" VerticalOptions="Center"
           Padding="20" MinimumWidthRequest="320">
        <VerticalStackLayout Spacing="16">
            <Label x:Name="TitleLabel" Text="Import Images" FontSize="18" FontAttributes="Bold" TextColor="White" />

            <Label x:Name="FileCountLabel" Text="0 images selected" TextColor="#ccc" />

            <!-- Layout selection for Load mode -->
            <VerticalStackLayout x:Name="LayoutPanel" Spacing="8">
                <Label Text="Layout:" TextColor="#ccc" />
                <HorizontalStackLayout Spacing="16">
                    <RadioButton x:Name="GridRadio" Content="Grid" IsChecked="True"
                                 TextColor="White" GroupName="Layout" />
                    <RadioButton x:Name="ColumnRadio" Content="Column"
                                 TextColor="White" GroupName="Layout" />
                    <RadioButton x:Name="RowRadio" Content="Row"
                                 TextColor="White" GroupName="Layout" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!-- Change layout option for Import mode -->
            <VerticalStackLayout x:Name="ChangeLayoutPanel" Spacing="8" IsVisible="False">
                <HorizontalStackLayout>
                    <CheckBox x:Name="ChangeLayoutCheckBox" CheckedChanged="OnChangeLayoutChecked" />
                    <Label Text="Change layout" TextColor="#ccc" VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout x:Name="ImportLayoutOptions" Spacing="16" IsVisible="False">
                    <RadioButton x:Name="ImportGridRadio" Content="Grid" IsChecked="True"
                                 TextColor="White" GroupName="ImportLayout" />
                    <RadioButton x:Name="ImportColumnRadio" Content="Column"
                                 TextColor="White" GroupName="ImportLayout" />
                    <RadioButton x:Name="ImportRowRadio" Content="Row"
                                 TextColor="White" GroupName="ImportLayout" />
                </HorizontalStackLayout>
            </VerticalStackLayout>

            <Label x:Name="InfoLabel" TextColor="#aaa" FontSize="12" />

            <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked"
                        BackgroundColor="#3e3e42" TextColor="White" />
                <Button x:Name="ImportButton" Text="Import" Clicked="OnImportClicked"
                        BackgroundColor="#0078d4" TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
