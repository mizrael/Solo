<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SpriteSheetEditor.Controls.ImportImagesDialog"
             BackgroundColor="#80000000">

    <Frame BackgroundColor="#2d2d30" BorderColor="#3e3e42" CornerRadius="8"
           HorizontalOptions="Center" VerticalOptions="Center"
           Padding="20" MinimumWidthRequest="320">
        <VerticalStackLayout Spacing="16">
            <Label Text="Import Images" FontSize="18" FontAttributes="Bold" TextColor="White" />

            <Label x:Name="FileCountLabel" Text="0 images selected" TextColor="#ccc" />

            <VerticalStackLayout>
                <Label Text="Padding (pixels):" TextColor="#ccc" />
                <Entry x:Name="PaddingEntry" Text="0" Keyboard="Numeric"
                       BackgroundColor="#333" TextColor="White" />
            </VerticalStackLayout>

            <Label x:Name="InfoLabel" TextColor="#aaa" FontSize="12" />

            <HorizontalStackLayout Spacing="8" HorizontalOptions="End">
                <Button Text="Cancel" Clicked="OnCancelClicked"
                        BackgroundColor="#3e3e42" TextColor="White" />
                <Button x:Name="ImportButton" Text="Import" Clicked="OnImportClicked"
                        BackgroundColor="#0078d4" TextColor="White" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Frame>
</ContentView>
